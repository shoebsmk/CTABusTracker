<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/material_dynamic_primary80"
    app:cardCornerRadius="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/system_accent1_800">

        <TextView
            android:id="@+id/routeNoTV"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="124"
            android:textAlignment="center"
            android:textColor="#EDE9E9"
            android:textColorHint="#DCCACA"
            android:textColorLink="#E6D1D1"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/descriptionTV"
            app:layout_constraintTop_toBottomOf="@+id/stopNameTV" />

        <TextView
            android:id="@+id/descriptionTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="Morse Red line"
            android:textAlignment="center"
            android:textColor="#EDE9E9"
            android:textColorHint="#DCCACA"
            android:textColorLink="#E6D1D1"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/predictionTimeTV"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="20 Min"
            android:textAlignment="center"
            android:textColor="#EDE9E9"
            android:textColorHint="#DCCACA"
            android:textColorLink="#E6D1D1"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/descriptionTV"
            app:layout_constraintTop_toBottomOf="@+id/stopNameTV" />

        <TextView
            android:id="@+id/stopNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Devon and Hoyne"
            android:textAlignment="center"
            android:textColor="#EDE9E9"
            android:textColorHint="#DCCACA"
            android:textColorLink="#E6D1D1"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/descriptionTV"
            app:layout_constraintStart_toStartOf="@+id/descriptionTV"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTV" />

        <TextView
            android:id="@+id/moreInfoTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Vehicle(9999) is (9999) ft away from stop(999)"
            android:textAlignment="center"
            android:textColor="#EDE9E9"
            android:textColorHint="#DCCACA"
            android:textColorLink="#E6D1D1"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/descriptionTV"
            app:layout_constraintStart_toStartOf="@+id/descriptionTV"
            app:layout_constraintTop_toBottomOf="@+id/directionTV" />

        <TextView
            android:id="@+id/directionTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Eastbound"
            android:textAlignment="center"
            android:textColor="#EDE9E9"
            android:textColorHint="#DCCACA"
            android:textColorLink="#E6D1D1"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/predictionTimeTV"
            app:layout_constraintStart_toEndOf="@+id/routeNoTV"
            app:layout_constraintTop_toBottomOf="@+id/stopNameTV" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>